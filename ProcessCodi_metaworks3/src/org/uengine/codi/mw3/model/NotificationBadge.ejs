<% 
	if(value.newItemCount==0){
%>
	<div id="" style="float:left; margin-left:-30px; padding-top:17px;">	
		<a class="badgeMail" href="javascript:<%=methods.showList.caller()%>">
			<img src="images/waveStyle/badgeMail.png"><%=value.newItemCount%>
		</a>	
	</div>
<% 
	}else if(value.newItemCount>0){
%>
	<div id="" style="float:left; margin-left:-45px; padding-top:17px;">	
		<a class="badgeRed" href="javascript:<%=methods.showList.caller()%>" style="display:none">
			<span><%=value.newItemCount%></span>
		</a>	
	</div>
<% 
	}
%>

<%
	if(value){
		if(mw3.how == 'tree'){
%>
		<div>	
			<a onClick="<%=methods.drillDown.caller()%>; <% if(mw3.where!='addContact'){%><%=methods.loadDeptList.caller()%><% } %>" class="idept"><%=fields.partName.here()%></a>					
<%
			if(mw3.where=='deptPicker'){
%>
			<%=methods.pickup.here()%>
<%			
			}
%>		
			<div style="clear"></div>	
		</div>
		
<%		
			if(value.selected) {
%>
				<ul>				
<%
				if(value.children) {
%>
					<li style=" padding-left:20px;"><%=fields.children.here() %></li>
<%
				}
				
				if(value.deptEmployee) {
%>
					<li style=" padding-left:20px;"><%=fields.deptEmployee.here() %></li>
<%
				}
%>		
				<ul>
<%
			}
		} else if(mw3.how == 'picker'){
%>
			<span><%=value.partName %>(<%=value.partCode %>)</span>
<%
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
			<span><%=methods.openPicker.here()%></span>
<%	
			}
		} else if(mw3.how == 'deptFollower'){
		%>
			<span style="float: left; border: none;"> 
				<div class="user">		
				<div class="user_focus" style="background: url(images/portrait/group.png); background-size:cover;"  title="<%=value.partName%>">	
					<img id="user_picture_<%=objectId%>" src="images/portrait/group.png" width=34 height=34>
				</div>
				<div style="clear:both"></div>
				</div>
			</span>
		<%
		} else {
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
			PartCode : <%=fields.partCode.here({when : mw3.when=='edit'?'view':mw3.when}) %>
			PartName : <%=fields.partName.here() %>
			Description : <%=fields.description.here() %>
			
			<%=methods.saveDeptInfo.here() %>
<%			
			}
		}
	}
%>


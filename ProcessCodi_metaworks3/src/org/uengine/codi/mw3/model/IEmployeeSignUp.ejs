<%
	if(value){
		var isPrev = !mw3.isHiddenMethod(methods.prevStep);
		var step = Number(mw3.where.substring(4));
%>

<div id="signup_popup">
    <div class="popup_title"> <span>가입</span> </div>
    <div class="popup_step">
    	<div class="stepbar">
        	<div class="first_circle circle <%=(step > 1)?'completed':''%>">
        		<span>Create Profile</span>
        		<%if(step==1){%><span class="ing"></span><%}%>
        	</div>
            <div class="last_circle circle">
            	<span>Add Your Photo</span>
            	<%if(step==2){%><span class="ing"></span><%}%>
            </div>
        </div>
    </div>
    <div class="popup_content">
<%
		if('step1' == mw3.where){
%>
    	<div class="signup_info"><%=mw3.localize('$signup.welcome', 'tenant')%></div>
        <label><%=mw3.localize(fields.email.fieldDescriptor.displayName)%></label>
        <%=fields.email.here({when: 'view'})%>
        <label><%=mw3.localize(fields.empName.fieldDescriptor.displayName)%></label>
        <%=fields.empName.here()%>
        <label><%=mw3.localize(fields.password.fieldDescriptor.displayName)%></label>
        <%=fields.password.here()%>
        <label><%=mw3.localize(fields.partName.fieldDescriptor.displayName)%></label>
        <%=fields.partName.here()%>
        <label><%=mw3.localize(fields.jikName.fieldDescriptor.displayName)%></label>
        <%=fields.jikName.here()%>
<%
		}else if('step2' == mw3.where){
%>
	<img id="userPicture_<%=objectId %>" src="<%='portrait/' + value.empCode + '.thumnail' %>" width="104" height="104" />
	<%=fields.imageFile.here() %>
<%
		}
%>

        <div class="popup_btn_line">
        	<div class="<%=isPrev?'popup_btn_blue':'popup_btn_gray'%>" onClick="<%=methods.prevStep.caller()%>">Prev</div>
        	
<%
		if(!mw3.isHiddenMethod(methods.nextStep)){
%>
        	<div class="popup_btn_blue" onClick="<%=methods.nextStep.caller()%>">Next</div>
<%
		}
%>
<%
		if(!mw3.isHiddenMethod(methods.finish)){
%>
        	<div class="popup_btn_blue" onClick="<%=methods.finish.caller()%>">Finish</div>
<%
		}
%>

        </div>
      
    </div>
    <div class="popup_bottom"></div>
</div>

<%
	}
%>
<%
	if(mw3.when == 'edit'){
%>
<div class="inLineSpan">
	<div style="float:left;">
		<ul>
			<li><span class="firstSpan"><%=mw3.localize(fields.id.fieldDescriptor.displayName)%></span><span><%=fields.id.here()%></span></li>
			<li><span class="firstSpan"><%=mw3.localize(fields.type.fieldDescriptor.displayName)%></span><span><%=fields.type.here()%></span></li>
			<li><span class="firstSpan"><%=mw3.localize(fields.disable.fieldDescriptor.displayName)%></span><span><%=fields.disable.here()%></span></li>
			<li><span class="firstSpan""><%=mw3.localize(fields.displayname.fieldDescriptor.displayName)%></span><span><%=fields.displayname.here()%></span></li>
		</ul>
	</div>	
	<div id="selectOption_<%=objectId%>" style="float:left; padding-left:20px; display:none;">
		<ul>
			<li style="padding-bottom:20px"><span>selectBox 에 들어갈 option 과 value를 콤마(,) 로 구분하여 적어주세요</li>
			<li><span class="firstSpan">옵션</span><span><%=fields.selectOption.here()%></span></li>
			<li><span class="firstSpan">value</span><span><%=fields.selectValue.here()%></span></li>
		</ul>
	</div>	
	
		
	<div style="float:right;">
<%
		if(mw3.where == 'in-container'){
%>	
			<a id="wBtn" href="#" onclick="<%=methods.save.caller()%>"><span>save</span></a>
<%
		}
%>
	</div>

<div class="clear"></div>			
</div>

<%
		if(mw3.where == 'newEntry'){
%>	
<div>
	<div style="float:right; margin:10px 0">
		<a id="wBtn" href="#" onclick="<%=methods.add.caller()%>"><span>Add</span></a>
	</div>
</div>

<%
		}
	}else if(mw3.when == 'view'){
%>

<div class="inLineSpan" style="background:#F3F3F3; cursor:move;">
	<div style="float:left;">
		<ul>
			<li><span class="firstSpan"><%=mw3.localize(fields.id.fieldDescriptor.displayName)%></span><span><%=fields.id.here()%></span></li>
			<li><span class="firstSpan"><%=mw3.localize(fields.type.fieldDescriptor.displayName)%></span><span><%=fields.type.here()%></span></li>
			<li><span class="firstSpan"><%=mw3.localize(fields.disable.fieldDescriptor.displayName)%></span><span><%=fields.disable.here()%></span></li>
			<li><span class="firstSpan"><%=mw3.localize(fields.displayname.fieldDescriptor.displayName)%></span><span><%=fields.displayname.here()%></span></li>
		</ul>
	</div>
	<%
		if( value.type == 'org.metaworks.component.SelectBox' ){
	%>
		<div style="float:left; padding-left:20px; ">
			<ul>
				<li><span class="firstSpan">옵션</span><span><%=fields.selectOption.here()%></span></li>
				<li><span class="firstSpan">value</span><span><%=fields.selectValue.here()%></span></li>
			</ul>
		</div>	
	<%
		}
	%>
	<div style="float:right;">
		<span style="display:inline-block; cursor:pointer" onCLick="<%=methods.edit.caller()%>"><img src="images/waveStyle/form.png" title="edit"></span>
		<span style="display:inline-block; cursor:pointer" onCLick="<%=methods.up.caller()%>"><img src="images/waveStyle/navigate-up.png" title="up"></span>
		<span style="display:inline-block; cursor:pointer" onCLick="<%=methods.down.caller()%>"><img src="images/waveStyle/navigate-down.png" title="down"></span>
		<span style="display:inline-block; cursor:pointer" onCLick="<%=methods.remove.caller()%>"><img src="images/waveStyle/loadFailed.gif" title="remove"></span>
	</div>
	<div class="clear"></div>
</div>

<%
	}
%>
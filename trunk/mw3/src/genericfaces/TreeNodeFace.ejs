	<div class="item">
		<span>&nbsp;</span
		<div class="label-content">
			<label style="display:inline-block;">
				<u class="caption">
					<b class="icon-<%=value[objectMetadata.iconFieldDescriptor.name]%> tab_icon" style="color:#0E51A3"></b>
					<%=value[objectMetadata.nameFieldDescriptor.name]%>
				</u>
			</label>
		</div>
	</div>		
</div>


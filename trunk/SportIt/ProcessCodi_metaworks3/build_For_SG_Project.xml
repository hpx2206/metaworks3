<project name="Build_For_SG_Project" default="apply" basedir=".">
    <property environment="env"/>
	<property name="sg.home" value="${env.SG_HOME}"/>

	<target name="apply">		
		
		<copy todir="${sg.home}/WebContent/WEB-INF/lib/" overwrite="yes">
			<fileset dir="./WebContent/WEB-INF/lib">
	 			<include name="*.jar"/>
			</fileset>
		</copy>
		
		<jar jarfile="./build/process_codi.jar">
			<fileset dir="bin">
		  		<include name="**/*.*"/>
			</fileset>
		</jar>
		
		
		<copy file="./build/process_codi.jar" todir="${sg.home}/WebContent/WEB-INF/lib"/>
		
	</target>
</project>




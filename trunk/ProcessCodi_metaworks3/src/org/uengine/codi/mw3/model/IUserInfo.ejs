<%
	if(value){
		var portrait = '';		
		if(value.network == 'local' || value.network == null){
			if(value.userId)
				portrait = 'portrait/' + value.userId + '.thumnail';			
		}else if(value.network == 'fb'){
			if(value.userId)
				portrait = 'http://graph.facebook.com/' + value.userId + '/picture';			
		}
		
%>
		<ul>
			<li class="user_card_top"></li>
			<li class="user_card_title"></li>
			<li>
				<dl class="lst_type2" style="height:195px; padding-top:8px;">

					<dd class="photo">
						<div id="popupInfoImgWih"><img id="user_picture_<%=objectId%>" src="<%=portrait%>" width="104" height="104"></div>	
					</dd>
					<dd class="tit">
						<div id="popupInfoNameWih"><b><%=value.name%></b></div>
						<%
							if(value.self){
						%>
						<div>
							<%=fields.mood.here({when:'edit'})%>
						</div>
						<div style="margin-top:5px;">
							<a id="wBtn" href="#" onClick="<%=methods.changeMood.caller()%>"><span style="color:#000; margin-right:0px"><%=mw3.localize("$ChangeMood")%></span></a>
						</div>
						
						<%	}else{%>
							<%=value.mood ? value.mood : ''%>
						<%	}%>	
		
					</dd>
					<div class="clear"></div>
					<div style="width:100%;margin-top:15px;">
						<table cellpadding="0" cellspacing="0" width="100%" border="1" class="tbl_type_border">
							<tr align="right">
								<th width="50%" align="center">Business Value</th>
								<th width="50%" align="center">Todo Count</th>
							</tr>
							<tr align="right">
								<td height="40" align="center" style="font-size:20pt"><%=value.businessValue%></td>
								<td align="center" style="font-size:20pt"><%=value.todoCount%></td>
							</tr>
						</table>
					</div>
       			</dl>
       			
      		</li>    
     	</ul>
     	<div style="clear:both"></div>
     	<div id="btnline" style="border-top:1px solid #E3E8F2; padding-top:8px;">
     		<ul>
<%
		var groupMap = {};
		
		if(objectMetadata.serviceMethodContexts){
			for(var i=0; i<objectMetadata.serviceMethodContexts.length; i++){
   	   			var serviceMethod = objectMetadata.serviceMethodContexts[i];
   	   			
   	   			if(serviceMethod.mouseBinding == 'drag' || serviceMethod.mouseBinding == 'drop')
   	   				continue;
%>
				<li style="<%=serviceMethod.group?'float:left':''%>"> <%=methods[serviceMethod.methodName].here()%></li>
<%
			}
		}
%>

     		</ul>
     	</div>
     	<div style="clear:both"></div>
     	
<%
	}
%>

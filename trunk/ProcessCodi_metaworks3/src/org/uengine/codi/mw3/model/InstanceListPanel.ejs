<%
	if(value == null && typeof value == 'undefined')
		return;
		
	var session = mw3.getAutowiredObject("org.uengine.codi.mw3.model.Session");
	var isTopic = (mw3.how == "topic");
	
%>

<div class="top" style="height: <%=isTopic?'115':'68'%>px; overflow:hidden; position: absolute; min-width: 0px; min-height: 0px; max-width: 10000px; max-height: 10000px;  left: 0px; right: 0px; top: 0px;">
	
	<%=isTopic?fields.topicFollowers.here():''%>
	
		            <div id="searchbox">
		                <div class="searchboxline">
		                	<div class="searchboxline2">
		                        <div class="newprocessbtn">
			                        <a href="#" onclick="<%=methods.newInstance.caller()%>">
			                        	<span id="method_<%=objectId%>_newInstance">
			                        		<div id="startBtn">
						                        <% if(mw3.how == "topic"){ 
							                        	var title = session.windowTitle;
														if( title != null && title != '' && title.length > 13){
															title = title.substring(0,13) + '...';
														}%>
													"<%= title %>"Ïóê 
												<%}%> 
													<%=mw3.localize("$New")%>
											</div>
										</span>
									</a>
								</div>
		                        <div class="searchboxarea" id="method_<%=objectId%>_newInstance">
		                        	<%=fields.searchBox.here()%>
		                        </div>
		                        <div style="clear:both;"></div>
		                    </div>
		                </div>
		                <div style="clear:both;"></div>
		            </div>    
		            <div class="toolbar">
	                    <ul>
	                        <li onclick="<%=methods.switchToInstanceList.caller()%>" <%=(value.instanceList && session.lastPerspecteType=='allICanSee') ? "class='toolbar_current'" : ""%>><span><img src="images/waveStyle/i_upcoming.png" border="0"></span><span><%=mw3.localize("$ComingUp")%></span></li>
	                        <li onclick="<%=methods.switchToInstanceListFollowing.caller()%>" <%=(value.instanceList && session.lastPerspecteType=='all') ? "class='toolbar_current'" : ""%>><span><img src="images/waveStyle/i_follow.png" border="0"></span><span ><%=mw3.localize("$Following")%></span></li>               
	                        <li onclick="<%=methods.switchToInstanceListMyToDo.caller()%>" <%=(value.instanceList && session.lastPerspecteType=='inbox') ? "class='toolbar_current'" : ""%>><span><img src="images/waveStyle/i_todo.png" border="0"></span><span><%=mw3.localize("$MyToDo")%></span></li>               
	                        <li onclick="<%=methods.switchToKnowledge.caller()%>" <%=value.knowledge ? "class='toolbar_current'" : ""%>><span><img src="images/waveStyle/i_know.png" border="0"></span><span id="method_<%=objectId%>_switchToKnowledge"><%=mw3.localize("$Strategic")%></span></li>               
	                        <li onclick="<%=methods.switchToScheduleCalendar.caller()%>" <%=value.scheduleCalendar ? "class='toolbar_current'" : ""%>><span><img src="images/waveStyle/i_gantt.png" border="0"></span><span><%=mw3.localize("$Calendar")%></span></li>
	                    </ul>
                	</div>     
                		
</div>

<div class="bottom" style="top: <%=isTopic?'115':'68'%>px; overflow:auto; position: absolute; min-width: 0px; min-height: 0px; max-width: 10000px; max-height: 10000px;  left: 0px; right: 0px; bottom: 0px;">


				<%=value.instanceList ? fields.instanceList.here() : ""%>
				<%=value.scheduleCalendar ? fields.scheduleCalendar.here() : ""%>
				<%=value.knowledge ? fields.knowledge.here() : ""%>

</div>

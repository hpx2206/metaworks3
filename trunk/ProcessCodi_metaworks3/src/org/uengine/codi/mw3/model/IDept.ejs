<%
	if(value){
		if(mw3.how == 'tree'){
%>
		<div>	
			<a onClick="<%=methods.drillDown.caller()%>;<%=methods.loadDeptList.caller()%>" class="idept"><%=fields.partName.here()%></a>					
<%
			if(mw3.where=='deptPicker'){
%>
			<%=methods.pickup.here()%>
<%			
			}
%>		
			<div style="clear"></div>	
		</div>
		
<%		
			if(value.selected) {
%>
				<ul>				
<%
				if(value.children) {
%>
					<li style=" padding-left:20px;"><%=fields.children.here() %></li>
<%
				}
				
				if(value.deptEmployee) {
%>
					<li style=" padding-left:20px;"><%=fields.deptEmployee.here() %></li>
<%
				}
%>		
				<ul>
<%
			}
		} else if(mw3.how == 'picker'){
%>
			<span><%=value.partName %>(<%=value.partCode %>)</span>
<%
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
			<span><%=methods.openPicker.here()%></span>
<%	
			}
		} else if(mw3.how == 'deptFollower'){
		%>
			<span style="float: left; border: none;"> 
				<div class="user" onclick="">
					<div class="user_focus" style="background-image: url(images/portrait/group.png); background-size: cover; background-position: initial initial; background-repeat: no-repeat no-repeat;" title="<%=value.partName%>">
						<img id="user_picture_242" width="1" height="1" src="images/portrait/test.jpg" onerror="$(this).parent().css({'background':'url(\'images/portrait/group.png\') no-repeat','background-size':'cover'})">
					</div>
					<div style="clear:both"></div>
				</div>
			</span>
		<%
		} else {
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
			PartCode : <%=fields.partCode.here({when : mw3.when=='edit'?'view':mw3.when}) %>
			PartName : <%=fields.partName.here() %>
			Description : <%=fields.description.here() %>
			
			<%=methods.saveDeptInfo.here() %>
<%			
			}
		}
	}
%>


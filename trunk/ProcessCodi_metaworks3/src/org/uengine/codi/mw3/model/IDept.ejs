<%
	if(value){
		if(mw3.how == 'tree'){
%>
		<div>	
			<a onClick="<%=methods.drillDown.caller()%>; <% if(mw3.where!='addContact'){%><%=methods.loadDeptList.caller()%><% } %>" class="idept"><%=fields.partName.here()%></a>					
<%
			if(mw3.where=='deptPicker'){
%>
			<%=methods.pickup.here()%>
<%			
			}
%>		
			<div style="clear"></div>	
		</div>
		
<%		
			if(value.selected) {
%>
				<ul>				
<%
				if(value.children) {
%>
					<li style=" padding-left:20px;"><%=fields.children.here() %></li>
<%
				}
				
				if(value.deptEmployee) {
%>
					<li style=" padding-left:20px;"><%=fields.deptEmployee.here() %></li>
<%
				}
%>		
				<ul>
<%
			}
		} else if(mw3.how == 'picker'){
%>
			<span><%=value.partName %>(<%=value.partCode %>)</span>
<%
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
			<span><%=methods.openPicker.here()%></span>
<%	
			}
		} else if(mw3.how == 'deptFollower'){
		%>
			<span style="float: left; border: none;"> 
				<div class="user">		
				<div class="user_focus" style="background: url(images/portrait/group.png); background-size:cover;"  title="<%=value.partName%>">	
					<img id="user_picture_<%=objectId%>" src="images/portrait/group.png" width=34 height=34>
					<div class="followers_name" title="<%=value.partName%>"><%=value.partName%></div>
				</div>
				<div style="clear:both"></div>
				</div>
			</span>
		<%
		} else if(mw3.how == 'manager'){
		%>
			<div class="form_table2"> 
				<table border="1" cellspacing="0" >	
					<tbody>
						<tr>
							<th width=100>회사명</th>
							<td><%=fields.globalCom.here({when:'view'})%></td>
						</tr>
						<tr>
							<th>부서코드</th>
							<td><%=fields.partCode.here({when:'view'})%></td>
						</tr>	
						<tr>
							<th>부서명</th>
							<td><%=fields.partName.here({when:'edit'})%></td>
						</tr>
						<tr>
							<th>정보</th>
							<td><%=fields.description.here({when:'edit'})%></td>
						</tr>
					</tbody>
				</table>
			</div>
		<%
		} else {
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
			
		<div class="lst_type2" style="height:190px; padding-top:20px">
			<div class="infoSub"><span class="infoSubFirstSpan" style="width:90px"><%=mw3.localize("$PartCode")%> :</span><span><%=fields.partCode.here({when : mw3.when=='edit'?'view':mw3.when}) %></span></div>		
			<div class="infoSub"><span class="infoSubFirstSpan" style="width:90px"><%=mw3.localize("$PartName")%> :</span><span><%=fields.partName.here()%></span></div>	
			<div class="infoSub"><span class="infoSubFirstSpan" style="width:90px"><%=mw3.localize("$Description")%> :</span><span><%=fields.description.here()%></span></div>	
			
		</div>
		
		
		<div id="btnline" style="padding-top:8px; border-top:1px solid #ccc;">
			<ul>	
				<li><a id="wBtn" href="#" onClick="<%=methods.saveDeptInfo.caller()%>"><span><% if(mw3.when == 'new') {%><%=mw3.localize('$saveDeptInfo')%><%}else{%><%=mw3.localize('$editDeptInfo')%><%}%></span></a>
				</li>					
			</ul>
		</div>

<%			
			}
		}
	}
%>


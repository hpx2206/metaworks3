<%
	if(value){
		if(mw3.how == 'tree'){
%>
			<a style="cursor: pointer" onClick="<% if(mw3.where!='addContact'){%><%=methods.loadDeptList.caller()%><% }else{ %> <%=methods.drillDown.caller()%><% } %>" ><span class="icon-tree"></span><div style="display:inline-block;"><%=fields.partName.here()%></div></a>					
<%
			if(mw3.where=='deptPicker'){
%>
			<%=methods.pickup.here()%>
<%			
			}
%>		
		
<%		
			if(value.selected) {
				if(value.children) {
%>
				
					<div><%=fields.children.here() %></div>
<%
				}
				
				if(value.deptEmployee) {
%>
					<div style=" padding:5px;border-bottom: 1px solid #E7EAEF;"><%=fields.deptEmployee.here() %></div>
<%
				}
			}
		} else if(mw3.how == 'picker'){
%>
			<span><%=value.partName %>(<%=value.partCode %>)</span>
<%
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
			<span><%=methods.openPicker.here()%></span>
<%	
			}
		} else if(mw3.how == 'deptFollower'){
		%>
			<span style="float: left; border: none;"> 
				<div class="user">		
				<div class="user_focus" style="background: url(images/portrait/group.png); background-size:cover;"  title="<%=value.partName%>">	
					<img id="user_picture_<%=objectId%>" src="images/portrait/group.png" width=34 height=34>
					<div class="followers_name" title="<%=value.partName%>"><%=value.partName%></div>
				</div>
				<div style="clear:both"></div>
				</div>
			</span>
		<%
		} else if(mw3.how == 'manager'){
		%>
			<div class="form_table2"> 
				<table border="1" cellspacing="0" >	
					<tbody>
						<tr>
							<th width=100>회사명</th>
							<td><%=fields.globalCom.here({when:'view'})%></td>
						</tr>
						<tr>
							<th>부서코드</th>
							<td><%=fields.partCode.here({when:'view'})%></td>
						</tr>	
						<tr>
							<th>부서명</th>
							<td><%=fields.partName.here({when:'edit'})%></td>
						</tr>
						<tr>
							<th>정보</th>
							<td><%=fields.description.here({when:'edit'})%></td>
						</tr>
					</tbody>
				</table>
			</div>
		<%
		} else if(mw3.how == 'info'){
		%>
		
		<div id="searchbox" style="border-bottom:1px solid #9EBFC4"> 
        <!--ui object -->
        <ul>
            <li>
                <div class="mp_sub_pic project_img">
                	<%=fields.logoFile.here({when:'image', htmlAttr:{style:'width: 150px; height: 150px; line-height: 150px;border:1px solid #ccc; background:url(images/waveStyle/bg_thmb.gif) center no-repeat;'}})%>
                </div>


                <div class="mp_sub_rightBox">
                	<dl class="mp_sub_dsc1">
                    	<dt style="font-size:16px;"><%=fields.partName.here()%></dt>
                    	<dd><span class="mp_sub_tit"><%=mw3.localize("$Description")%> : </span><span class="mp_sub_rst"><%=fields.description.here()%></span></dd>          
                    </dl>                    
                </div>
                <div class="clear"></div>
                <div id="searchbox" style="border-bottom:1px solid #9EBFC4;">
	                <div class="positionRight" style="padding:5px 0">
						
						<div class="clear"></div>
					</div>
				</div>
				<div class="clear"></div>
            </li>
        </ul>
    </div>
		<%
		} else {
			if(mw3.when == 'new' || mw3.when == 'edit'){
%>
				<div class="form_table">
					<table style="width: 100%;" border="0" cellspacing="0">	
						<tbody>
							<tr>
								<th style="width:auto"><%=mw3.localize("$PartName")%> </th>
								<td><%=fields.partName.here() %></td>
							<tr>
							<tr>
								<th style="width:auto"><%=mw3.localize("$PartDesc")%></th>
								<td><%=fields.description.here()%></td>
							<tr>
							<tr>
								<th style="width:auto"><%=mw3.localize("$LogoFile")%></th>
								<td><%=fields.logoFile.here({when:'edit'})%></td>
							<tr>
						</tbody>
					</table>
				</div>

		
		
		<div id="btnline" style="padding-top:8px; border-top:1px solid #ccc;">
			<ul>	
				<li><a id="wBtn" href="#" onClick="<%=methods.saveDeptInfo.caller()%>"><span><% if(mw3.when == 'new') {%><%=mw3.localize('$saveDeptInfo')%><%}else{%><%=mw3.localize('$editDeptInfo')%><%}%></span></a>
				</li>					
			</ul>
		</div>

<%			
			}
		}
	}
%>

